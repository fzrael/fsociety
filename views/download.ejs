    <script>
        document.getElementById('verifyLicense').addEventListener('click', async () => {
            const licenseKey = document.getElementById('licenseKey').value;
            const infoSection = document.getElementById('infoSection');
            const magnetLink = document.getElementById('magnetLink');
            const formGroup = document.querySelector('.form-group');
            
            try {
                const response = await fetch('/api/verify-license', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json'
                    },
                    body: JSON.stringify({ licenseKey })
                });

                const data = await response.json();

                if (data.valid) {
                    formGroup.classList.add('hidden');
                    infoSection.classList.add('visible');
                    magnetLink.value = data.magnetLink;
                    
                    const copyButton = document.querySelector('.copy-btn');
                    if (data.type === 'trial') {
                        copyButton.innerHTML = '<i class="fas fa-arrow-up"></i> ترقية الترخيص';
                        copyButton.onclick = () => window.location.href = '/pricing';
                        copyButton.classList.add('upgrade-btn');
                    } else {
                        copyButton.innerHTML = '<i class="fas fa-copy"></i> نسخ الرابط';
                        copyButton.onclick = copyMagnetLink;
                        copyButton.classList.remove('upgrade-btn');
                    }
                    
                    showAlert('تم التحقق من الترخيص بنجاح', 'success');
                } else {
                    showAlert(data.message || 'ترخيص غير صالح', 'error');
                }
            } catch (error) {
                showAlert('حدث خطأ أثناء التحقق من الترخيص', 'error');
            }
        });

        function copyMagnetLink() {
            const magnetLink = document.getElementById('magnetLink');
            magnetLink.select();
            document.execCommand('copy');
            showAlert('تم نسخ رابط التورنت بنجاح', 'success');
        }

        function showAlert(message, type) {
            const alert = document.createElement('div');
            alert.className = `alert alert-${type}`;
            alert.innerHTML = `
                <i class="fas fa-${type === 'success' ? 'check-circle' : 'exclamation-circle'}"></i>
                ${message}
            `;
            document.body.appendChild(alert);
            setTimeout(() => alert.remove(), 3000);
        }

        function toggleInfoCard(header) {
            const content = header.nextElementSibling;
            header.classList.toggle('collapsed');
